        include templates/components/welcome-section/home-parallax
        include templates/components/welcome-section/header
        include templates/components/welcome-section/home
        include templates/components/welcome-section/about
      include templates/components/skills-section/skills-section
      include templates/components/works-section/works-section
      .feedback-section
        include templates/components/feedback-section/feedback-parallax
        include templates/components/feedback-section/reviews-section
        include templates/components/feedback-section/feedback
      include templates/components/footer
