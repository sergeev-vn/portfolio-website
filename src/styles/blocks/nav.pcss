.nav__list {
    display: flex;
}

.nav__item {
    margin-right: 60px;

    &:last-child {
        margin-right: 0;
    }
}

.nav-wrapper {
    margin: 0 90px;
}

.nav__link {
    color: $main-color;
    font-size: 16px;
    font-weight: 400;
    line-height: 1.88;
    transition: color $speed;
    
    &:hover {
        color: $orange-color;
    }
}