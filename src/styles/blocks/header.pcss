.header {
    padding: 45px 0;
    width: 100%;
    position: absolute;
    top: 0;
    z-index: 5;
}

.header__container {
    display: flex;
    justify-content: space-between;
    align-items: center;
}

.header__logo {
    color: $main-color;
    font-size: 36px;
    font-weight: 800;
    line-height: 0.83;
}